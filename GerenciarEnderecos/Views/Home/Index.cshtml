@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <button class="btn btn-primary" value="AddAddress" id="BtnAddAddress" onclick="ChangeVisibilityCardFormAddress()">Adicionar Endereço</button>
    <div class="card" id="CardFormAddress" style="display:none">
        <div class="card-header">
            Cadastrar Endereço
        </div>
        <div class="card-body">
        </div>
    </div>
</div>

<script type="text/javascript">
    var CardFormAddressisVisible = false;
    function ChangeVisibilityCardFormAddress() {

        if (!CardFormAddressisVisible) {
            $("#CardFormAddress").show();
            CardFormAddressisVisible = true;
        }
    };
</script>
